<h1>  Sports </h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Season</th>
      <th>Gender</th>
      <th colspan="3"></th>
    </tr>
  </thead>



<% # GOT TO FIND A WAY TO GET SPORT NAME TO DISPLAY AS "#{sport.gender} sport.name" %>
  <tbody>
      <tr>
        <% @sports.each do |sport| %>
        <td><%= sport.name %></td>
        <td><%= sport.season.name %></td>
        <td><%= sport.gender %></td>
        <% if current_user.id == 1 %>
          <td><%= link_to 'Show', sport %></td>
          <td><%= link_to 'Edit', edit_sport_path(sport) %></td>
          <td><%= link_to 'Destroy', sport, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
      <tr>
        
      </tr>
    <% end %>
  </tbody>
</table>


